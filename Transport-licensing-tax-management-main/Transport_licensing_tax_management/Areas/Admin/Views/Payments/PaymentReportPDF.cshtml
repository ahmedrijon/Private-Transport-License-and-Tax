@model IEnumerable<Transport_licensing_tax_management.DataModel.Payments>

@{
    ViewData["Title"] = "Report";
    Layout = "_ReportLayout";
}

<style>

    .tgroup, h1, p {
        margin: 30px;
    }
</style>
<div>
    <div class="text-center pt-5">
        <h3 style="text-decoration: underline rgb(146, 146, 146);">Vehicle Report</h3>


    </div>

    <div class="tgroup">
        <table class="table table-bordered border-primary text-center">
            <thead>
                <tr>
                    <th>
                      #SL
                    </th>
                    <th>Payment By Car Number</th>
                    <th>Payments ID</th>
                    <th>Payment By Code</th>
                    <th>Amount</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>@payment.CarNumber</td>
                        <td>@payment.PaymentsID</td>
                        <td>@payment.PaymentCode</td>
                        <td>@payment.Amount</td>
                        <td>@payment.Type</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>