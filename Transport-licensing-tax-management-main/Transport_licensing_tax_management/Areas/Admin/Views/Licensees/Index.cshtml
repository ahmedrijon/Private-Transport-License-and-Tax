@model IEnumerable<Transport_licensing_tax_management.DataModel.Vehicles>

@{
    ViewData["Title"] = "New Number Plate Provide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <thead>
        <tr>

            <th>
                Register NID
            </th>
            
            <th>
                Number Plate
            </th>
            <th>
                Engine Number
            </th>
            <th>
                chassis Number
            </th>
            <th>
                Status
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.RegisterNID)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.VehiclesNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EngineNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.chassisNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("NewNumberPlateDetails", "Licensees", new { id = item.VehiclesId })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


